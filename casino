<body>
    <div class="container">
        <header>
            <h1><i class="fas fa-coins"></i> Lucky Slot Machine</h1>
            <p class="subtitle">Spin the reels and test your luck!</p>
        </header>
        
        <div class="game-container">
            <div class="slot-machine">
                <div class="reels-container">
                    <div class="reel" id="reel1">
                        <div class="reel-inner" id="reelInner1"></div>
                    </div>
                    <div class="reel" id="reel2">
                        <div class="reel-inner" id="reelInner2"></div>
                    </div>
                    <div class="reel" id="reel3">
                        <div class="reel-inner" id="reelInner3"></div>
                    </div>
                </div>
                
                <div class="control-panel">
                    <button class="spin-btn" id="spinBtn">
                        <i class="fas fa-play"></i> SPIN
                    </button>
                    
                    <div class="bet-controls">
                        <button class="bet-btn" id="decreaseBet">
                            <i class="fas fa-minus"></i>
                        </button>
                        <div class="bet-display">
                            <span id="currentBet">10</span> <i class="fas fa-coins coins"></i>
                        </div>
                        <button class="bet-btn" id="increaseBet">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                    
                    <div class="stats">
                        <div class="stat-box">
                            <div class="stat-label">COINS</div>
                            <div class="stat-value coins" id="coinsCount">100</div>
                        </div>
                        <div class="stat-box">
                            <div class="stat-label">WINS</div>
                            <div class="stat-value" id="winsCount">0</div>
                        </div>
                        <div class="stat-box">
                            <div class="stat-label">SPINS</div>
                            <div class="stat-value" id="spinsCount">0</div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="symbol-info">
                <h3>Symbol Payouts</h3>
                <div class="symbol-list" id="symbolList"></div>
            </div>
            
            <div class="instructions">
                <h3>How to Play</h3>
                <ul>
                    <li>Click the SPIN button to start the slot machine</li>
                    <li>Adjust your bet using the +/- buttons</li>
                    <li>Match 3 symbols horizontally to win coins</li>
                    <li>Different symbols have different payout multipliers</li>
                    <li>You start with 100 coins - try to get as many as you can!</li>
                </ul>
            </div>
        </div>
        
        <footer>
            <p>Lucky Slot Machine &copy; 2023 | Created for fun and entertainment</p>
        </footer>
    </div>
    
    <div class="win-message" id="winMessage">
        <div id="winText">WINNER!</div>
        <div id="winAmount" style="font-size: 1.5rem; margin-top: 10px;"></div>
    </div>
    
    <script>
        // Game variables
        let coins = 100;
        let currentBet = 10;
        let wins = 0;
        let spins = 0;
        let isSpinning = false;
        
        // Slot symbols with their multipliers
        const symbols = [
            { icon: "ðŸ’", name: "Cherry", multiplier: 3 },
            { icon: "ðŸ‹", name: "Lemon", multiplier: 2 },
            { icon: "ðŸŠ", name: "Orange", multiplier: 2 },
            { icon: "ðŸ‰", name: "Watermelon", multiplier: 5 },
            { icon: "â­", name: "Star", multiplier: 10 },
            { icon: "7ï¸âƒ£", name: "Seven", multiplier: 20 },
            { icon: "ðŸ””", name: "Bell", multiplier: 7 },
            { icon: "ðŸ’Ž", name: "Diamond", multiplier: 15 }
        ];
        
        // DOM elements
        const spinBtn = document.getElementById('spinBtn');
        const decreaseBetBtn = document.getElementById('decreaseBet');
        const increaseBetBtn = document.getElementById('increaseBet');
        const currentBetElement = document.getElementById('currentBet');
        const coinsCountElement = document.getElementById('coinsCount');
        const winsCountElement = document.getElementById('winsCount');
        const spinsCountElement = document.getElementById('spinsCount');
        const winMessage = document.getElementById('winMessage');
        const winText = document.getElementById('winText');
        const winAmount = document.getElementById('winAmount');
        const symbolList = document.getElementById('symbolList');
        
        // Reel elements
        const reelElements = [
            document.getElementById('reelInner1'),
            document.getElementById('reelInner2'),
            document.getElementById('reelInner3')
        ];
        
        // Initialize the game
        function initGame() {
            updateDisplay();
            populateSymbolList();
            initializeReels();
            
            // Event listeners
            spinBtn.addEventListener('click', spinReels);
            decreaseBetBtn.addEventListener('click', () => changeBet(-10));
            increaseBetBtn.addEventListener('click', () => changeBet(10));
            
            // Sound effects (using Web Audio API for simple beeps)
            initAudio();
        }
        
        // Populate the symbol payout info
        function populateSymbolList() {
            symbols.forEach(symbol => {
                const symbolItem = document.createElement('div');
                symbolItem.className = 'symbol-item';
                
                symbolItem.innerHTML = `
                    <div class="symbol">${symbol.icon}</div>
                    <div class="symbol-name">${symbol.name}</div>
                    <div class="symbol-multiplier">x${symbol.multiplier}</div>
                `;
                
                symbolList.appendChild(symbolItem);
            });
        }
        
        // Initialize reels with symbols
        function initializeReels() {
            // Create multiple copies of symbols to make the reel appear continuous
            for (let i = 0; i < reelElements.length; i++) {
                let reelHTML = '';
                // Add extra symbols at the beginning and end for smooth animation
                for (let j = 0; j < 12; j++) {
                    const symbolIndex = Math.floor(Math.random() * symbols.length);
                    reelHTML += `<div class="symbol">${symbols[symbolIndex].icon}</div>`;
                }
                reelElements[i].innerHTML = reelHTML;
                // Position the reel to show the middle symbols
                reelElements[i].style.top = '-400px';
            }
        }
        
        // Change the current bet
        function changeBet(amount) {
            const newBet = currentBet + amount;
            if (newBet >= 10 && newBet <= 100 && newBet <= coins) {
                currentBet = newBet;
                updateDisplay();
            }
        }
        
        // Update all display elements
        function updateDisplay() {
            currentBetElement.textContent = currentBet;
            coinsCountElement.textContent = coins;
            winsCountElement.textContent = wins;
            spinsCountElement.textContent = spins;
            
            // Disable spin button if not enough coins
            spinBtn.disabled = coins < currentBet || isSpinning;
        }
        
        // Spin the reels
        function spinReels() {
            if (isSpinning || coins < currentBet) return;
            
            // Deduct bet from coins
            coins -= currentBet;
            spins++;
            updateDisplay();
            
            isSpinning = true;
            spinBtn.disabled = true;
            spinBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> SPINNING';
            
            // Play spin sound
            playSound('spin');
            
            // Reset win message
            winMessage.classList.remove('show');
            
            // Results for each reel
            const results = [];
            
            // Spin each reel with different durations for more realistic effect
            for (let i = 0; i < reelElements.length; i++) {
                // Randomly select a result for this reel
                const resultIndex = Math.floor(Math.random() * symbols.length);
                results.push(resultIndex);
                
                // Calculate how far to spin (multiple full rotations + target position)
                const spinDuration = 1500 + i * 300; // Stagger the reel stops
                const targetPosition = -400 - (resultIndex * 100); // Each symbol is 100px tall
                
                // Animate the reel
                animateReel(reelElements[i], targetPosition, spinDuration, i === reelElements.length - 1);
            }
            
            // Store results for checking after animation completes
            setTimeout(() => {
                checkResults(results);
            }, 2500);
        }
        
        // Animate a single reel
        function animateReel(reelElement, targetPosition, duration, isLast) {
            const startPosition = parseInt(reelElement.style.top) || -400;
            const distance = targetPosition - startPosition;
            const startTime = performance.now();
            
            function animate(currentTime) {
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);
                
                // Easing function for smooth deceleration
                const easedProgress = 1 - Math.pow(1 - progress, 3);
                
                reelElement.style.top = (startPosition + distance * easedProgress) + 'px';
                
                if (progress < 1) {
                    requestAnimationFrame(animate);
                } else {
                    // Reset position if too far from center (for continuous spinning effect)
                    if (parseInt(reelElement.style.top) <= -1000) {
                        reelElement.style.top = '-400px';
                    }
                    
                    // If this is the last reel, enable the spin button
                    if (isLast) {
                        isSpinning = false;
                        spinBtn.disabled = coins < currentBet;
                        spinBtn.innerHTML = '<i class="fas fa-play"></i> SPIN';
                    }
                }
            }
            
            requestAnimationFrame(animate);
        }
        
        // Check if the spin resulted in a win
        function checkResults(results) {
            // Get the symbols from the results
            const resultSymbols = results.map(index => symbols[index]);
            
            // Check if all three symbols match
            const allMatch = resultSymbols[0].icon === resultSymbols[1].icon && 
                            resultSymbols[1].icon === resultSymbols[2].icon;
            
            // Check if two symbols match
            const twoMatch = resultSymbols[0].icon === resultSymbols[1].icon || 
                            resultSymbols[1].icon === resultSymbols[2].icon || 
                            resultSymbols[0].icon === resultSymbols[2].icon;
            
            let winAmount = 0;
            
            if (allMatch) {
                // All three symbols match - big win!
                winAmount = currentBet * resultSymbols[0].multiplier;
                wins++;
                coins += winAmount;
                showWinMessage(`JACKPOT! ${resultSymbols[0].icon} ${resultSymbols[0].icon} ${resultSymbols[0].icon}`, winAmount);
                playSound('win');
            } else if (twoMatch) {
                // Two symbols match - small win
                // Find which symbol appears twice
                let matchingSymbol;
                if (resultSymbols[0].icon === resultSymbols[1].icon || resultSymbols[0].icon === resultSymbols[2].icon) {
                    matchingSymbol = resultSymbols[0];
                } else {
                    matchingSymbol = resultSymbols[1];
                }
                
                winAmount = Math.floor(currentBet * matchingSymbol.multiplier / 2);
                wins++;
                coins += winAmount;
                showWinMessage(`TWO OF A KIND!`, winAmount);
                playSound('smallWin');
            } else {
                // No win
                playSound('lose');
            }
            
            updateDisplay();
        }
        
        // Show win message
        function showWinMessage(message, amount) {
            winText.textContent = message;
            winAmount.textContent = `You won ${amount} coins!`;
            winMessage.classList.add('show');
            
            // Hide win message after 3 seconds
            setTimeout(() => {
                winMessage.classList.remove('show');
            }, 3000);
        }
        
        // Audio functions for sound effects
        function initAudio() {
            // We'll use simple beeps for sound effects
            // In a real game, you would use actual sound files
        }
        
        function playSound(type) {
            // Create audio context
            const audioContext = new (window.AudioContext || window.webkitAudioContext)();
            
            if (type === 'spin') {
                // Spin sound - a rising tone
                playBeep(audioContext, 200, 0.1, 0.2);
                setTimeout(() => playBeep(audioContext, 300, 0.1, 0.2), 100);
                setTimeout(() => playBeep(audioContext, 400, 0.1, 0.2), 200);
            } else if (type === 'win') {
                // Win sound - a fanfare
                playBeep(audioContext, 523.25, 0.2, 0.5); // C
                setTimeout(() => playBeep(audioContext, 659.25, 0.2, 0.5), 200); // E
                setTimeout(() => playBeep(audioContext, 783.99, 0.2, 0.5), 400); // G
                setTimeout(() => playBeep(audioContext, 1046.50, 0.5, 0.5), 600); // C (high)
            } else if (type === 'smallWin') {
                // Small win sound
                playBeep(audioContext, 659.25, 0.2, 0.3); // E
                setTimeout(() => playBeep(audioContext, 783.99, 0.3, 0.3), 200); // G
            } else if (type === 'lose') {
                // Lose sound
                playBeep(audioContext, 220, 0.3, 0.2); // Low A
            }
        }
        
        function playBeep(audioContext, frequency, duration, volume) {
            const oscillator = audioContext.createOscillator();
            const gainNode = audioContext.createGain();
            
            oscillator.connect(gainNode);
            gainNode.connect(audioContext.destination);
            
            oscillator.frequency.value = frequency;
            oscillator.type = 'sine';
            
            gainNode.gain.setValueAtTime(volume, audioContext.currentTime);
            gainNode.gain.exponentialRampToValueAtTime(0.001, audioContext.currentTime + duration);
            
            oscillator.start(audioContext.currentTime);
            oscillator.stop(audioContext.currentTime + duration);
        }
        
        // Initialize the game when the page loads
        window.addEventListener('DOMContentLoaded', initGame);
    </script>
</body>
</html>
